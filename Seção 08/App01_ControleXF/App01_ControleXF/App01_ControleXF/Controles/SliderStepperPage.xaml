<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Result"/>
            <Slider
                Minimum="0"
                Maximum="100"
                Value="20"
                
                ValueChanged="ActionValorMudou"/>
            <Stepper 
                Minimum="0"
                Maximum="10"
                Increment="2"
                Value="0"
                ValueChanged="Stepper_ValueChanged"/>

            <Label x:Name="StepperResult"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>